<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    tools:context=".ShopsActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="40dp"
        android:background="@drawable/search_view_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottom_nav_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile11"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/ShopBottomHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="@+id/ShopBottomShops"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/img_6" />

            <ImageView
                android:id="@+id/ShopBottomShops"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="@+id/ShopBottomCart"
                app:layout_constraintStart_toEndOf="@+id/ShopBottomHome"
                app:srcCompat="@drawable/img_7" />

            <ImageView
                android:id="@+id/ShopBottomCart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/img_8"
                app:layout_constraintStart_toEndOf="@+id/ShopBottomShops"
                app:layout_constraintEnd_toStartOf="@+id/ShopBottomUser" />

            <ImageView
                android:id="@+id/ShopBottomUser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@+id/ShopBottomCart"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/img_9" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>