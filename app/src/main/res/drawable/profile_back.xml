<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F6FA" /> <!-- Background color -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#DDDDDD" /> <!-- Border color -->
            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />
            <shadowColor android:shadowColor="@color/black" android:shadowDx="0" android:shadowDy="4" android:shadowRadius="8" />
        </shape>
    </item>
</selector>